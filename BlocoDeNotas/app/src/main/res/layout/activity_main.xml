<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo"
    tools:context="com.example.naelio.blocodenotas.MainActivity">


    <ImageView
        android:id="@+id/imageViewAnotacoes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        app:srcCompat="@drawable/logo" />

    <EditText
        android:id="@+id/editTextConteudo"
        android:layout_width="320dp"
        android:layout_height="360dp"
        android:layout_alignLeft="@+id/imageViewAnotacoes"
        android:layout_alignStart="@+id/imageViewAnotacoes"
        android:layout_below="@+id/imageViewAnotacoes"
        android:background="@drawable/fundo_anotacao"
        android:ems="10"
        android:gravity="start"
        android:inputType="textPersonName"
        android:paddingLeft="35dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp" />

    <ImageView
        android:id="@+id/imageViewSalvar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editTextConteudo"
        android:layout_alignStart="@+id/editTextConteudo"
        android:layout_below="@+id/editTextConteudo"
        app:srcCompat="@drawable/botao_salvar" />
</RelativeLayout>
